<div class="page-header">
  <h2>Stylist: <%= @stylist.name() %></h2>
</div>
<h3>Clients:</h3>
<% @stylist.clients().each() do |client| %>
  <ul>
    <li><h4><%= client.name() %></h4></li>
  </ul>
<% end %>
<br><br>
<form action="/add_client/" method="get">
  <input id="stylist_id" name="stylist_id" type="hidden" value="<%= @stylist.id() %>">
  <div class="input-group">
    <span class="input-group-addon"><span class="glyphicon glyphicon-user" aria-hidden="true"></span></span>
    <input type="text" name="client" id="client" class="form-control" placeholder="Add client for <%= @stylist.name() %>" aria-describedby="basic-addon1">
  </div>
  <br>
  <button type="submit" class="btn btn-sm btn-primary">Add client</button>
  <button type="reset" class="btn btn-sm btn-danger">Reset</button>
</form>
<br>
<form id="form_id" action="/" method="get">
  <button type="submit" class="btn btn-default"><span class="glyphicon glyphicon-arrow-left" aria-hidden="true"></span> Back</button>
</form>
